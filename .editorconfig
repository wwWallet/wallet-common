# EditorConfig: https://EditorConfig.org

[*]
charset = utf-8
insert_final_newline = true # Type of newline is managed by git in .gitattributes
trim_trailing_whitespace = true

[*.{css,js,jsx,ts,tsx}]
indent_style = tab

# YAML does not allow tab indentation
[*.{yml,yaml}]
indent_style = space
indent_size = 2
